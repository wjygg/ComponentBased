<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <com.example.wangjingyun.componentbased.widget.bannerview.BannerViewPager
        android:id="@+id/viewpageradapter"
        android:layout_width="match_parent"
        android:layout_height="160dp"></com.example.wangjingyun.componentbased.widget.bannerview.BannerViewPager>

    <RelativeLayout
        android:background="@color/translucent"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content"
            android:text="轮播图内容"
            android:textSize="15sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/dotcombination"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
